<mvc:View 
	controllerName="LicensedToCode.controller.App" 
    xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	height="100%"
	xmlns="sap.m">
	<Page>
		<customHeader height="100px">
			<Bar design="Header">
				<contentLeft>
					<Image src="assets/logo-trans.png" height="45px"/>
				</contentLeft>
			<contentRight>
				<OverflowToolbar>
					<ToggleButton icon="sap-icon://menu2"></ToggleButton>
				</OverflowToolbar>
			</contentRight>
		</Bar>
		</customHeader>
		<content>
			<html:div class="contact">
				<VBox class="box1 flexContainer">
					<Text text="CONTACT US" class="text1 colorText"/>
					<Text text="We are just behind your Screen" class="text2 colorText"/>
				</VBox>
			</html:div>
			<VBox class="flexContainer box2">
				<Text text="Looking for more information about LTC, or want to incquire about our services?" class="texts colorText" />
				<Text text="You have come to the right place." class="texts colorText"/>
			</VBox>
			<l:FixFlex vertical="false" fixContentSize="450px" class="fixflexBox flexContainer">
				<l:fixContent>
					<f:SimpleForm id="idCreateUserForm"
   					  editable="true" 
   					  class="leftFix"
   					  layout="ResponsiveGridLayout" 
					  labelSpanL="3" labelSpanM="3"  
					  emptySpanL="4" emptySpanM="4" columnsL="1" 
					  columnsM="1">
   						<f:content>
   							<Text text="Contact Form" class="textSize1 colorText" />
   							<Label/>
							<Input id="addusername" type="Text" placeholder="Full Name" />
							<Label/>
							<Input id="addaddress" type="Email" placeholder="Email" />
							<Label/>
							<Input id="addphone" type="Text" placeholder="Company" />
							<Label/>
							<Button width="100px" class="styleButton" text="Submit" type="Emphasized" press="onAdd" />
						</f:content>
					</f:SimpleForm>
				</l:fixContent>
				<l:flexContent>
					<VBox class="flexRight">
						<Text text="Contact Info" class="textSize1 padding"/>
						<Text text="Mailing Address: " class="textSize2 padding"/>
						<Text text="111 Chestnut Street" class="textSize2 padding" />
						<Text text="San Francisco, CA 94111" class="padding" />
						<Text text="TEL: 415-613-8810" class="textSize2 padding"/>
						<Text text="FAX: 415-291-9651" class="textSize2 padding"/>
						<Text text="Email: info@licensedtocode.com" class="textSize2 padding"/>
					<HBox class="center padding">
						<Link href="#" class="fa fa-facebook" />
						<Link href="#" class="fa fa-google" />
						<Link href="#" class="fa fa-linkedin" />
					</HBox>
					</VBox>
				</l:flexContent>
			</l:FixFlex>
			<VBox class="flexContainer">
				<html:iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d25219.150411429375!2d-122.40550400000001!3d37.804244!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808580f76856f1c5%3A0x7009ddffa5a7eb22!2s111+Chestnut+St%2C+San+Francisco%2C+CA+94111%2C+USA!5e0!3m2!1sen!2snp!4v1525164684920" width="259%" height="340" frameborder="0" style="border" allowfullscreen="true"></html:iframe>
			</VBox>
		</content>
		<footer>
			<Bar>
				<contentMiddle>
					<Text text="Copyright 2018" />
				</contentMiddle>
			</Bar>
		</footer>
	</Page>
</mvc:View>